{% extends 'base.html.twig' %}

{% block title %}
	{{atelier.nom}}
{% endblock %}

{% block body %}


	<style>

		img {
			width: 255px;
			height: 300px;
		}
	</style>

	<h2>
		{{atelier.nom}}
		<h2>

			<h3>
				Details de l'atelier:
			</h3>
			<ul>
				<li>Image :
					<img src="{{ vich_uploader_asset(atelier, 'imageFile') }}" alt="{{ atelier.nom }}"/></li>
				<li>
					Nom :
					{{atelier.nom}}</li>
				<li>
					Description:
					{{atelier.description}}</li>
				<li>
					Date :
					{{atelier.date|date('d-m-Y')}}</li>
			</ul>

		{% endblock %}
