{% extends 'base.html.twig' %}

{% block title %}Mes reservations{% endblock %}


{% block body %}
    <div class="container-fluid my-3 mx-3">
            <div class="row">
                <h3 class="text-center"> <i class="fas fa-book-open"> </i> Mes réservations</h3>
                {% if reservations is empty %}
                    <p>Aucune réservation.</p>
                {% else %}
                    <table>
                        <thead>
                            <tr>
                                <th>Atelier</th>
                               
                                <th> Date </th> 
                            
                            </tr>
                        </thead>
                        <tbody>
                            {% for reservation in reservations %}
                                <tr>
                                    <td>{{ reservation.atelier.nom }}</td>
                                   
                                    <td> {{ reservation.atelier.date|date('d/m/Y')}}</td>
                                    

                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
    </div>
{% endblock %}
